rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Genel olarak, varsayılan olarak tüm yollara erişimi engelle
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Profil fotoğrafları için kurallar
    // Yolu: /upload/avatars/{userId}/avatar.jpg
    match /upload/avatars/{userId}/avatar.jpg {
      // Herkesin profil fotoğraflarını okumasına izin ver.
      allow read;
      // Sadece kimliği doğrulanmış ve kendi profil fotoğrafını yükleyen kullanıcının yazmasına izin ver.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
