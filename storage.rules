rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // General rule for public read access on most files
    match /{allPaths=**} {
      allow read;
    }

    // Specific rule for user avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Specific rule for direct message media
    match /dms/{chatId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid in chatId.split('_');
    }
  }
}