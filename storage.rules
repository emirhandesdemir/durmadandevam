rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Genel okuma izni: Herkes, herkese açık dosyaları okuyabilir.
    match /{allPaths=**} {
      allow read;
    }

    // Avatar Yükleme Kuralları:
    // Kullanıcıların sadece kendi avatar klasörlerine yazmasına izin ver.
    match /avatars/{userId}/{fileName} {
      // 1. Kullanıcı giriş yapmış olmalı.
      // 2. Kullanıcı sadece kendi klasörüne (userId) yazabilir.
      // 3. Yüklenen dosya bir resim olmalı ('image/jpeg', 'image/png', vb.).
      // 4. Dosya boyutu 5MB'dan küçük olmalı.
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.contentType.matches('image/.*') &&
                      request.resource.size < 5 * 1024 * 1024;
    }
    
    // Oda Dosyaları (Resimler, vb.)
    match /upload/rooms/{roomId}/{allPaths=**} {
      // Oda katılımcıları (veya daha spesifik kurallar) dosya yükleyebilir.
      // Şimdilik sadece giriş yapmış kullanıcılar için izin verelim.
      allow write: if request.auth != null;
    }
  }
}
