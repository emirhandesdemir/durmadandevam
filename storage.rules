rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files.
    // This is useful for profile pictures, post images, etc.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own avatar directory.
    // The path checks that the user is trying to write to a folder
    // that matches their own UID.
    match /avatars/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload to their own room folders
    match /upload/rooms/{roomId}/{allPaths=**} {
      allow write: if request.auth != null;
    }

     // Allow authenticated users to upload to their own dm folders
    match /dms/{chatId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload music to room playlists
    match /music/{roomId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
