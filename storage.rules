
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Genel Kural: Varsayılan olarak tüm yollara erişimi engelle.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Profil Fotoğrafları (avatars)
    // Herkes okuyabilir, sadece sahibi yazabilir.
    match /upload/avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Gönderi Resimleri (posts)
    // Herkes okuyabilir, sadece sahibi yazabilir.
    match /upload/posts/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Surf Videoları (videos)
    // Herkes okuyabilir, sadece sahibi yazabilir.
    match /upload/videos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Oda Dosyaları (rooms)
    // Sadece kimliği doğrulanmış kullanıcılar okuyabilir ve yazabilir.
    match /rooms/{roomId}/{allPaths=**} {
       allow read, write: if request.auth != null;
    }
    
    // Müzik Dosyaları (music)
    // Sadece kimliği doğrulanmış kullanıcılar okuyabilir ve yazabilir.
    match /music/{roomId}/{allPaths=**} {
       allow read, write: if request.auth != null;
    }

    // Direkt Mesaj Dosyaları (dms)
    // Sadece sohbete dahil olanlar okuyabilir ve yazabilir.
    // Sohbet ID'si 'uid1_uid2' formatında olmalıdır.
    match /dms/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid in chatId.split('_');
    }
  }
}
