
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default to denying access
    // allow read, write: if false;

    // Allow authenticated users to read public content
    match /upload/{path=**} {
      allow read: if request.auth != null;
    }

    // Allow users to upload their own avatar
    match /upload/avatars/{userId}/avatar.png {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload images for their posts
    match /upload/posts/{userId}/{postId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload files to rooms
    match /upload/rooms/{roomId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to upload files to DMs
    match /dms/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
