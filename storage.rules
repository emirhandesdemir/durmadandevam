rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to write to their own designated upload folders for posts and avatars.
    match /upload/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users in a DM chat to read/write files in that chat's folder.
    // The chatId is composed of two uids, e.g., 'uid1_uid2'.
    // The `matches` function checks if the user's uid is a substring of the chatId.
    match /dms/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null && chatId.matches(request.auth.uid);
    }
  }
}
