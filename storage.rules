rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Profile Avatars ---
    // Users can only write to their own avatar path. Avatars are public to read.
    match /upload/avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // --- Post Images ---
    // Users can only write to their own posts folder. Post images are public to read.
    match /upload/posts/{userId}/{fileName} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId
                     && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                     && request.resource.contentType.matches('image/.*');
    }
    
    // --- Room Media (Images/Videos) ---
    // Any authenticated user can upload to a room's folder.
    // We restrict by file size and type.
    match /upload/rooms/{roomId}/{folder}/{fileName} {
        allow read: if true;
        allow write: if request.auth != null
                     && request.resource.size < 25 * 1024 * 1024 // Max 25MB
                     && (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('video/.*'));
    }

    // --- Direct Messages (Images/Audio) ---
    // Only participants in the chat can read/write files for that chat.
    // The chatId is composed of "uid1_uid2".
    match /dms/{chatId}/{folder}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid in chatId.split('_')
                         && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                         && (request.resource.contentType.matches('image/.*') || request.resource.contentType.matches('audio/.*'));
    }
  }
}
