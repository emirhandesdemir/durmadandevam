rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Herkese açık profil resimleri
    match /upload/avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Herkese açık gönderi resimleri
    match /upload/posts/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Herkese açık gönderi videoları (surf için)
    match /upload/videos/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // DM dosyaları (sadece katılımcılar erişebilir)
    match /dms/{chatId}/{allPaths=**} {
      // DM'e kimlerin erişebileceğini doğrulamak için Firestore'a sorgu at.
      // `get()` fonksiyonu ile Firestore verisine erişim sağlanır.
      // Bu, sadece sohbetin katılımcılarının dosya okuyup yazmasını sağlar.
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/directMessagesMetadata/$(chatId)).data.participantUids.hasAny([request.auth.uid]);
    }
    
     // Oda müzikleri (sadece katılımcılar erişebilir)
    match /music/{roomId}/{allPaths=**} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/rooms/$(roomId)).data.participants.hasAny([request.auth.uid]);
        allow write: if request.auth != null && get(/databases/$(database)/documents/rooms/$(roomId)).data.participants.hasAny([request.auth.uid]);
    }
  }
}
