rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to read and write to their own avatar folder.
    match /upload/avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload to posts folder
    match /upload/posts/{userId}/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload to DMs
    match /dms/{chatId}/{folder}/{fileName} {
        allow read: if request.auth != null && chatId.split('_').includes(request.auth.uid);
        allow write: if request.auth != null && chatId.split('_').includes(request.auth.uid);
    }
    
    // Allow authenticated users to upload to rooms
    match /upload/rooms/{roomId}/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
