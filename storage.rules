rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Herkesin okumasına izin ver (profil fotoğraflarının görülebilmesi için)
    match /{allPaths=**} {
      allow read;
    }

    // Kullanıcıların sadece kendi avatarlarını yüklemesine/güncellemesine izin ver
    match /upload/avatars/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
     // Kullanıcıların kendi gönderi resimlerini yüklemesine izin ver
    match /upload/posts/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024 // 10MB limit
                    && request.resource.contentType.matches('image/.*');
    }

    // Kullanıcıların kendi video gönderilerini yüklemesine izin ver
    match /upload/videos/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 50 * 1024 * 1024 // 50MB limit
                    && request.resource.contentType.matches('video/.*');
    }
  }
}