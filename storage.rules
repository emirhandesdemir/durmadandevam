
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Genel okuma izni: Kullanıcı profili, gönderi resimleri gibi herkese açık
    // olması gereken içeriklerin sorunsuzca görüntülenebilmesi için gereklidir.
    match /{allPaths=**} {
      allow read;
    }

    // PROFİL FOTOĞRAFLARI: Kullanıcılar sadece kendi profil fotoğraflarını güncelleyebilir.
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // GÖNDERİLER: Kullanıcılar sadece kendi gönderileri için medya yükleyebilir.
    match /upload/posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // DİREKT MESAJLAR: Kullanıcılar sadece parçası oldukları sohbetlere medya yükleyebilir.
    // Sohbet ID'si (chatId), iki kullanıcının UID'sinin birleşiminden oluşur.
    // Bu kural, kullanıcının UID'sinin bu sohbet ID'si içinde yer alıp almadığını kontrol eder.
    match /dms/{chatId}/{allPaths=**} {
      allow write: if request.auth != null && chatId.matches(request.auth.uid);
    }
    
    // MÜZİK: Kullanıcılar sadece bulundukları odalara müzik yükleyebilir.
    match /music/{roomId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
