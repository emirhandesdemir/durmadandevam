rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Genel okuma izni (herkesin profil fotoğraflarını görmesi için)
    match /{allPaths=**} {
      allow read;
    }
    
    // Kullanıcıların sadece kendi klasörlerine yazma izni
    match /upload/{path}/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
