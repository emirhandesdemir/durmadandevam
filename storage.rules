rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /upload/avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /upload/posts/{mediaType}/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId 
                   && mediaType.matches('images|videos');
    }
  }
}
