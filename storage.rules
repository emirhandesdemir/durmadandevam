rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Public read for default avatars
    match /default_avatars/{allPaths=**} {
      allow read;
    }

    // User can only write to their own avatar path
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Post images can be read by anyone, but only created by authenticated users
    match /upload/posts/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // DM uploads: User can write to their own folder, and read if they are part of the chat.
    // The filename contains the chatId for read access verification.
    match /dm_uploads/{userId}/{chatId}_{allPaths=**} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/directMessagesMetadata/$(chatId)).data.participantUids[request.auth.uid] == request.auth.uid;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Room audio uploads
    match /music/{roomId}/{allPaths=**} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/rooms/$(roomId));
      allow write: if request.auth != null && get(/databases/$(database)/documents/rooms/$(roomId)).data.participants[request.auth.uid] == request.auth.uid;
    }
  }
}
