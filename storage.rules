
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to user avatars
    match /upload/avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to posts images
    match /upload/posts/images/{userId}/{allPaths=**} {
       allow read;
       allow write: if request.auth != null && request.auth.uid == userId;
    }
    
     // Allow authenticated users to write to posts videos
    match /upload/video/{userId}/{allPaths=**} {
       allow read;
       allow write: if request.auth != null && request.auth.uid == userId;
    }
    
     // Allow authenticated users to write to dms
    match /dms/{chatId}/{folder}/{allPaths=**} {
       allow read;
       allow write: if request.auth != null;
    }

    // Allow authenticated users to write to room media
    match /upload/rooms/{roomId}/{folder}/{allPaths=**} {
       allow read;
       allow write: if request.auth != null;
    }
    
    // Allow authenticated users to write to music folder
    match /music/{roomId}/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }
  }
}
