rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profil Fotoğrafları
    // Sadece kimliği doğrulanmış kullanıcılar kendi avatarlarını veya adminler herhangi bir avatarı güncelleyebilir.
    // Herkes profil fotoğraflarını okuyabilir.
    match /upload/avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Gönderi Resimleri ve Videoları
    // Sadece kimliği doğrulanmış kullanıcılar medya yükleyebilir. Herkes okuyabilir.
    match /upload/{postsOrVideos}/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // DM Medyaları (Resimler, Sesli Mesajlar)
    // Sadece sohbete dahil olan kullanıcılar medya yükleyebilir ve görebilir.
    match /dms/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null && get(/databases/(default)/documents/directMessagesMetadata/$(chatId)).data.participantUids.hasAny([request.auth.uid]);
    }
    
    // Oda Medyaları (Resimler, Müzik)
    // Sadece kimliği doğrulanmış kullanıcılar yükleyebilir. Herkes okuyabilir (genel odalar).
    match /{musicOrUploads}/{roomId}/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }
  }
}
