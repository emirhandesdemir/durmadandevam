rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Herkesin okumasına izin ver (profil fotoğrafları için gerekli)
    match /{allPaths=**} {
      allow read;
    }

    // Kullanıcıların yalnızca kendi avatarlarını yüklemesine izin ver
    match /upload/avatars/{userId}/{allPaths=**} {
      // Yalnızca giriş yapmış ve kendi klasörüne yazan kullanıcılar yazabilir.
      // Dosya boyutu 5MB'tan küçük olmalıdır.
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024;
    }

    // Diğer tüm yollara yazmayı engelle
    match /{path=**} {
        allow write: if false;
    }
  }
}
