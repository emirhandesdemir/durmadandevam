rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // --- GENEL KURALLAR ---
    // Varsayılan olarak tüm okuma ve yazma işlemlerini reddet.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // --- PROFİL FOTOĞRAFLARI (AVATARS) ---
    // Herkes profil fotoğraflarını okuyabilir.
    // Bir kullanıcı sadece kendi avatarını yazabilir/güncelleyebilir.
    match /upload/avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // --- GÖNDERİ MEDYALARI (POSTS & VIDEOS) ---
    // Herkes gönderi resimlerini ve videolarını okuyabilir.
    // Giriş yapmış bir kullanıcı medya yükleyebilir.
    match /upload/posts/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
     match /upload/videos/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // --- ODA MEDYALARI (ROOMS) ---
    // Herkes oda resimlerini ve videolarını okuyabilir.
    // Giriş yapmış bir kullanıcı medya yükleyebilir.
    match /upload/rooms/{roomId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

     // --- DM MEDYALARI (DMS) ---
    // DM'deki medyaları (resim, ses vb.) sadece sohbetteki katılımcılar okuyabilir ve yazabilir.
    match /dms/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null && resource.metadata.chatId == chatId && request.auth.uid in get(/databases/$(database)/documents/directMessagesMetadata/$(chatId)).data.participantUids;
    }
    
    // --- ODA MÜZİKLERİ (MUSIC) ---
    // Herkes oda müziklerini okuyabilir.
    // Sadece giriş yapmış kullanıcılar müzik yükleyebilir.
    match /music/{roomId}/{allPaths=**} {
        allow read;
        allow write: if request.auth != null;
    }
  }
}
