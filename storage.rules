
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // POSTS: Allow authenticated users to write to their own post folder. Allow anyone to read.
    match /upload/posts/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // AVATARS: Allow authenticated users to write to their own avatar folder. Allow anyone to read.
    match /upload/avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ROOM CHAT MEDIA (Images/Videos)
    match /upload/rooms/{roomId}/{allPaths=**} {
      allow read; 
      allow write: if request.auth != null;
    }
    
    // DM MEDIA (Audio)
    match /dms/{chatId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
