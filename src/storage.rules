
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public Read Access for all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to their own avatar folder.
    // They can create, update, or delete profile.png inside their folder.
    match /avatars/{userId}/profile.png {
      allow write: if request.auth != null && 
                       request.auth.uid == userId &&
                       request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                       request.resource.contentType.matches('image/.*'); // Must be an image
    }

    // Allow authenticated users to upload to their own folders within /upload.
    // This is a general rule for features like post images or videos.
    match /upload/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for DM attachments
    match /dms/{chatId}/{folder}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid in chatId.split('_');
    }
    
    // Rules for music uploads in rooms
    match /music/{roomId}/{allPaths=**} {
        allow write: if request.auth != null; // Simplistic rule, can be refined to check room membership
    }
  }
}
